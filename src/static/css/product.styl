.orange
    background-color: #f0ad4e;
    color: #fff;
.green 
    background-color: #5cb85c;
    color: #fff;
.blue
    background-color: #4cb1cf;
    color: #fff;

.title
    font-size: 35px;
    margin-bottom: 20px;

.load-center 
    position: absolute;
    top: 50%;
    left: 50%;
.load-left
    float: left
    margin-top: 25px

.sub-img
    width: 80px
    height: 80px
    float: left
    margin-right: 10px
    margin-bottom: 10px
    position: relative
    border: 1px solid #ccc
.pt7
    box-sizing: border-box
    padding-top: 8px
.pm7
    padding-bottom: 7px

.img-icon-wrapper
    display: inline-block
    float: left
    position: relative
    .img-icon
        width: 88px
        height: 88px
        border: 1px solid #ccc
        margin: 0 8px 8px 0
    .fa-close
        position: absolute
        left: 0
        top: 0
        display: none
        width: 80px
        height: 80px
        line-height: 72px
        text-align: center
        background: black
        opacity: .5
        color: white
        font-size: 50px
        font-weight: bold
        cursor: pointer
    &:hover
        .fa-close
            display: inline-block
